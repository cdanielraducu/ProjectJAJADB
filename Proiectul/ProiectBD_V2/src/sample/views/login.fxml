<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.effect.DropShadow?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.controllers.LoginController"
            prefHeight="400.0" prefWidth="600.0">


    <children>

        <StackPane prefHeight="150.0" prefWidth="200.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
                   AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <effect><DropShadow/></effect>
            <children>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <VBox style = "-fx-background-color:orange" HBox.hgrow="ALWAYS"/>
                        <VBox HBox.hgrow="ALWAYS"/>
                    </children>
                </HBox>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                    <StackPane.margin>
                        <Insets bottom = "40.0" left="45.0" right="45" top="45.0"/>
                    </StackPane.margin>
                    <children>
                        <VBox alignment = "TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="480.0" prefWidth="480.0"
                              style ="-fx-background-color:white">
                            <effect>
                                <DropShadow/>
                            </effect>
                            <children>

                                <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 2em; -fx-font-family: Quicksand;
                                      -fx-font-weight:bold; -fx-fill: Orange;" text="Login"/>
                                <HBox alignment="TOP_RIGHT" prefWidth="330.0" prefHeight="40.0" style="-fx-background-color: white;
                                           -fx-border-color: #a2a2a2; -fx-border-width: 0px 0px 2px 0px;">

                                    <children>
                                        <TextField fx:id ="tf_username" alignment="TOP_LEFT" promptText="user"
                                                   style="-fx-background-color: Transparent; " HBox.hgrow="ALWAYS">
                                            <HBox.margin>
                                                <Insets bottom ="5.0" left="5.0" right="5.0" top="5.0" />
                                            </HBox.margin>
                                        </TextField>

                                    </children>
                                    <VBox.margin>
                                        <Insets left="25.0" right="25.0" top="70.0" />
                                    </VBox.margin>
                                </HBox>

                                <HBox alignment="TOP_RIGHT" prefHeight="40.0" prefWidth="330.0"
                                      style="-fx-background-color: white; -fx-border-color: #a2a2a2; -fx-border-width: 0px 0px 2px 0px;">
                                    <children>
                                        <PasswordField fx:id="tf_password" alignment="TOP_LEFT" promptText="password"
                                                       style="-fx-background-color: Transparent;" HBox.hgrow="ALWAYS">
                                            <HBox.margin>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                            </HBox.margin>
                                        </PasswordField>

                                    </children>
                                    <VBox.margin>
                                        <Insets left="25.0" right="25.0" top="10.0" />
                                    </VBox.margin>
                                </HBox>

                                <Button mnemonicParsing="false" onMouseClicked="#login" prefWidth="150.0"
                                        style="-fx-background-color: orange; -fx-background-radius: 100PX;
                                        -fx-text-fill: white;" text="Login" VBox.vgrow="ALWAYS">
                                    <VBox.margin>
                                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                                    </VBox.margin>
                                </Button>
                                <HBox alignment="BASELINE_CENTER" onMouseClicked="#signup">
                                    <padding>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                    </padding>
                                    <children>
                                        <Text onMouseClicked="#signup" strokeType="OUTSIDE" strokeWidth="0.0"
                                              style="-fx-font-weight: Bold; -fx-font-family: Quicksand; -fx-fill: Orange;" text="Sign Up">
                                            <HBox.margin>
                                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                            </HBox.margin>
                                        </Text>
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>
                    </children>
                </VBox>
            </children>

        </StackPane>


    </children>

</AnchorPane>
